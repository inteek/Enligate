        <div id="confirmEmailForm_ModalStateErrors" class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @*Success:
                <br />*@
            @{
        int count = 0;
