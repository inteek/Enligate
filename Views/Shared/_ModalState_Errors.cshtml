@using sw_EnligateWeb.Models.HelperClasses;

<div>
    @if (ViewData.ModelState[constClass.error] != null && ViewData.ModelState[constClass.error].Errors.Count > 0)
    {
        <div id="confirmEmailForm_ModalStateErrors" class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @*Errores:
                <br />*@
            @{
        int count = 0;
        foreach (var msg in ViewData.ModelState[constClass.error].Errors)
        {
            if (count > 0)
            {
                <br />
            }
            @Html.Raw(HttpUtility.HtmlDecode(msg.ErrorMessage))
            count++;
        }
            }
        </div>
    }

    @if (ViewData.ModelState[constClass.info] != null && ViewData.ModelState[constClass.info].Errors.Count > 0)
