@using sw_EnligateWeb.Models;
@model ForgotPasswordViewModel

@Html.AntiForgeryToken()

<div class="col-xs-12 mSubTitle1 text-center text-uppercase mSpacePb20">
    Recuperación de contraseña
</div>

<div class="col-xs-12 paddingLRZero mSpacePb10">
    Escribe tu correo electrónico que usaste para registrarte. Te enviaremos un mensaje con la instrucciones y un enlace para reestablecer tu contraseña.
</div>

<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 paddingLRZero">
    @Html.TextBoxFor(m => m.usuEmail, "", new { @class = "width100", @placeholder = "Correo" })
    @Html.ValidationMessageFor(m => m.usuEmail, "", new { @class = "text-danger" })
</div>

<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 paddingLRZero mSpacePt10">
    <button type="submit" class="btn btn-default width100">
        Enviar
    </button>
</div>


<div class="hidden m-messageHide">
    @Html.Partial("_ModalState_Errors")
</div>

<script type="text/javascript">
    @{ <text> @(new HtmlString(Model.scriptJS)) </text>}
</script>
