@using sw_EnligateWeb.Models;
@model LoginViewModel

@Html.AntiForgeryToken()

<div class="col-xs-12 hgRowTitle">
    Ya eres miembro:
</div>
<div class="col-xs-12">
    <div class="col-xs-12 paddingLRZero mlLabels">
        Usuario:
    </div>
    <div class="col-xs-12 paddingLRZero">
        @Html.TextBoxFor(m => m.usuEmail, "", new { @class = "width100", @placeholder = "Correo", @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.usuEmail, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-xs-12">
    <div class="col-xs-12 paddingLRZero mlLabels">
        Contraseña:
    </div>
    <div class="col-xs-12 paddingLRZero">
        @Html.PasswordFor(m => m.usuPassword, new { @class = "width100",  @placeholder = "Contraseña" , @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.usuPassword, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-xs-12 marginTB15">
    <button type="submit" class="btn btn-default width100">
        Entrar
    </button>
</div>

<div class="col-xs-12 forgotPass">
    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#modalPassRecovery" data-dismiss="modal">
        ¿Olvidaste tu contraseña?
    </button>
</div>

@Html.Hidden("returnUrl", (ViewBag.ReturnUrl != null) ? (string)ViewBag.ReturnUrl : null, new { @class = "loginHidReturnUrl" })

<div class="hidden m-messageHide">
    @Html.Partial("_ModalState_Errors")
</div>

<script type="text/javascript">
    @{ <text> @(new HtmlString(Model.scriptJS)) </text>}
</script>