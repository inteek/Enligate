    </div>
</div>

<div class="col-xs-12 col-sm-7 mSpaceMb5">
    <div class="marginForm">
        <div class="input-group m-input-groupLbl-XS m-input-groupLbl-SM width100">
            <span class="input-group-addon m-lbl">Estado:</span>
            @Html.TextBoxFor(m => m.tblTorneoDireccion.ldcEstado, new { @class = "width100" })
        </div>
        @Html.ValidationMessageFor(m => m.tblTorneoDireccion.ldcEstado, "", new { @class = "text-danger" })
