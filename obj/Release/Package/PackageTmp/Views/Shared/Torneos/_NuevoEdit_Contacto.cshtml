        @Html.ValidationMessageFor(m => m.tblTorneoDireccion.ldcNumeroExtInt, "", new { @class = "text-danger" })
    </div>
</div>

<div class="col-xs-12 col-sm-7 col-lg-6 mSpaceMb5">
