        <div class="input-group m-input-groupLbl-XS m-input-groupLbl-SM width100">
            <span class="input-group-addon m-lbl">C.P.:</span>
            @Html.TextBoxFor(m => m.tblTorneoDireccion.ldcCodigoPostal, new { @class = "width100", onkeypress = "return onlyNumbers(event,this);" })
        </div>
        @Html.ValidationMessageFor(m => m.tblTorneoDireccion.ldcCodigoPostal, "", new { @class = "text-danger" })
    </div>
</div>

<div class="col-xs-12 col-sm-7 col-lg-8 mSpaceMt10 mSpaceMb5 paddingLRZero">
    @Html.TextBoxFor(m => m.torCorreoContacto, new { @class = "width100", placeholder = "E-mail" })
    @Html.ValidationMessageFor(m => m.torCorreoContacto, "", new { @class = "text-danger" })
</div>

<div class="col-xs-12 col-sm-5 col-lg-4 mSpaceMt10 mSpaceMb10 mLreTelefonoContacto">
    @Html.TextBoxFor(m => m.torNumeroContacto, new { @class = "width100", placeholder = "Numero Celular" })
