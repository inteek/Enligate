@using sw_EnligateWeb.Models.HelperClasses;
@using System.Web.UI.WebControls;
@using sw_EnligateWeb.Models;
@model TorneosViewModel

<div class="col-xs-12 mSpaceMb5 paddingLRZero">
    <b>Domicilio</b>
</div>

<div class="col-xs-12 col-sm-8 mSpaceMb5">
    <div class="marginForm">
        <div class="input-group m-input-groupLbl-XS m-input-groupLbl-SM width100">
            <span class="input-group-addon m-lbl">Calle:</span>
            @Html.TextBoxFor(m => m.tblTorneoDireccion.ldcCalle, new { @class = "width100" })
        </div>
        @Html.ValidationMessageFor(m => m.tblTorneoDireccion.ldcCalle, "", new { @class = "text-danger" })
    </div>
</div>

<div class="col-xs-12 col-sm-4 mSpaceMb5">
